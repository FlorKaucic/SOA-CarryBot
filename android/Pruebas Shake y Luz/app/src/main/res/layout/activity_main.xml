<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnShake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="174dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="112dp"
        android:onClick="mostrarShake"
        android:text="Probar Shake"
        app:layout_constraintBottom_toTopOf="@+id/btnLuz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnLuz"
        android:layout_width="188dp"
        android:layout_height="48dp"
        android:layout_marginBottom="271dp"
        android:layout_marginEnd="142dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="88dp"
        android:onClick="mostrarLuz"
        android:text="Probar Luz Ambiental"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShake" />
</android.support.constraint.ConstraintLayout>